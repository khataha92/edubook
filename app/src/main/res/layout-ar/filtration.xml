<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:background="#88000000"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f2f2"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <CheckBox
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/AllPosts"
            android:id="@+id/all_posts"
            android:gravity="center"
            android:textColor="#000"
            android:button="@android:color/transparent"
            android:background="@drawable/filtration_checbox"
            android:layout_height="wrap_content"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/Polls"
            android:id="@+id/polls"
            android:gravity="center"
            android:textColor="#000"
            android:button="@android:color/transparent"
            android:background="@drawable/filtration_checbox"
            android:layout_height="wrap_content"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/Events"
            android:gravity="center"
            android:id="@+id/events"
            android:textColor="#000"
            android:button="@android:color/transparent"
            android:checked="false"
            android:background="@drawable/filtration_checbox"
            android:layout_height="wrap_content"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/Assignments"
            android:id="@+id/assignments"
            android:gravity="center"
            android:textColor="#000"
            android:button="@android:color/transparent"
            android:checked="false"
            android:background="@drawable/filtration_checbox"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:padding="10dp"
        android:background="@color/background"
        android:layout_gravity="left|top"
        android:id="@+id/relativeLayout22"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView28"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/imageView30"
            android:src="@drawable/edubook"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="30dp"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:id="@+id/imageView31"
            android:layout_alignParentTop="true"
            android:src="@drawable/plus"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
