<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/options_dlg_bg"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:paddingLeft="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="40dp"
        android:gravity="right"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Done"
            android:onClick="ok"
            android:gravity="center"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/done"
            android:textColor="@color/background"
            android:background="#f1f2f2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/lock_after_duedate"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/radio"
        android:button="@android:color/transparent"
        android:checked="true"
        android:layout_alignTop="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/LockAfterDueDate"
        android:textColor="#58595b"
        android:layout_toRightOf="@+id/lock_after_duedate"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView18" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/add_to_markbook"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/radio"
        android:button="@android:color/transparent"
        android:checked="true"
        android:layout_below="@+id/lock_after_duedate"
        android:layout_toLeftOf="@+id/textView18"
        android:layout_toStartOf="@+id/textView18" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/AddToMarkBook"
        android:layout_marginLeft="10dp"
        android:textColor="#58595b"
        android:layout_alignBottom="@+id/add_to_markbook"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18" />
        </LinearLayout>

</LinearLayout>
