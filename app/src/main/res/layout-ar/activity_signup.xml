<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edubook.Login.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edittext_bg"
        android:id="@+id/relativeLayout"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/background"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/imgUsername"
            android:layout_toEndOf="@+id/imgUsername"
            android:inputType="textPersonName"
            android:id="@+id/username"
            android:hint="@string/username"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/username"
            android:id="@+id/imgUsername"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/username"
            android:layout_alignBottom="@+id/username" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edittext_bg"
        android:id="@+id/relativeLayout2"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/background"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/imgEmail"
            android:layout_toEndOf="@+id/imgEmail"
            android:inputType="textPersonName"
            android:id="@+id/email"
            android:hint="@string/EmailAddress"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/email"
            android:id="@+id/imgEmail"
            android:layout_alignTop="@+id/email"
            android:layout_alignBottom="@+id/email"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:padding="4dp"
        android:id="@+id/code"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView1"
            android:padding="13dp"
            android:inputType="textVisiblePassword"
            android:textSize="14sp"
            android:background="@color/background"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_toEndOf="@+id/imageView1"
            android:id="@+id/access_code"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:hint="@string/AccessCode" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pass"
            android:id="@+id/imageView1"
            android:layout_alignTop="@+id/access_code"
            android:layout_alignBottom="@+id/access_code"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView2"
        android:src="@drawable/edubook_logo"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:layout_marginTop="10dp"
        android:text="@string/Next"
        android:onClick="next"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@color/background"
        android:id="@+id/next"
        android:layout_below="@+id/code"
        android:layout_centerHorizontal="true">


    </Button>

</RelativeLayout>
