<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:background="@color/sweet_dialog_bg_color"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:id="@+id/topShadow"
        android:background="@drawable/shadow_top"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/topShadow"
        android:paddingBottom="10dp"
        android:background="@drawable/home_box_bg"
        android:layout_height="wrap_content"
        android:id="@+id/assignment_post">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/post_id"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/userId"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/male_profile_image"
                app:civ_border_width="0dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Lily Collins"
                    android:textColor="@color/background"
                    android:id="@+id/name"
                    android:layout_alignTop="@+id/profile_image"
                    android:layout_toRightOf="@+id/profile_image"
                    android:layout_toEndOf="@+id/profile_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/time_color"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="11 hours ago"
                    android:id="@+id/age" />
            </LinearLayout>

        </LinearLayout>
<!-- -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout20"
            android:layout_below="@+id/event_box"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 Likes"
                android:textColor="@color/likes_color"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:id="@+id/likes" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Comment"
                android:textColor="@color/comments_color"
                android:textSize="13sp"
                android:id="@+id/comments" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/event_box"
            android:paddingBottom="20dp"
            android:background="@drawable/event_box"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Open Day"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/title"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <CustomComponent.FlexibleTextView
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Students will creatively use adjectives and literary devices to"
                android:id="@+id/description"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@+id/title"
                android:layout_alignStart="@+id/title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#000"
                android:id="@+id/line"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/description"
                android:layout_height="1dp">
            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/calendar_grey"
                android:layout_below="@+id/line"
                android:id="@+id/imageView26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Starts:"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView39"
                android:layout_alignTop="@+id/imageView26"
                android:layout_toRightOf="@+id/imageView26"
                android:layout_toEndOf="@+id/imageView26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="26 January 2016"
                android:id="@+id/from_date"
                android:layout_alignTop="@+id/textView39"
                android:layout_toRightOf="@+id/textView39"
                android:layout_toEndOf="@+id/textView39"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ends:"
                android:textStyle="bold"
                android:id="@+id/textView41"
                android:layout_alignBottom="@+id/imageView26"
                android:layout_alignLeft="@+id/textView39"
                android:layout_alignStart="@+id/textView39" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="3 February 2016"
                android:id="@+id/to_date"
                android:layout_alignTop="@+id/textView41"
                android:layout_alignLeft="@+id/from_date"
                android:layout_alignStart="@+id/from_date" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postMenu"
            android:layout_marginTop="5dp"
            android:src="@drawable/menu_tick"
            android:layout_alignRight="@+id/linearLayout20"
            android:layout_alignEnd="@+id/linearLayout20" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/linearLayout6"
        android:background="@drawable/comment_box_bg"
        android:layout_below="@+id/assignment_post"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <CustomComponent.ToggleLike
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/toggleLike">

        </CustomComponent.ToggleLike>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/comment"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment"
                android:text="@string/Comment"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/share"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share"
                android:text="@string/share"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/linearLayout6"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_bottom"
        />
</RelativeLayout>
