<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.edubook.activities.Profile">
    <ScrollView
        android:layout_width="match_parent"
        android:background="#e6e7e8"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout12">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:onClick="back"
            android:id="@+id/imageView14"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:overScrollMode="never"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_toRightOf="@+id/imageView14"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/controller" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/new_message"
            android:id="@+id/controller"
            android:layout_alignBottom="@+id/imageView14"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout12"
        android:background="@drawable/profile_circle_container"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout13">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/profile_circles_bg"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/background"
                android:textSize="20sp"
                android:id="@+id/students_count"
                android:textStyle="bold"
                android:text=""
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/background"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="@string/Students"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/profile_circles_bg"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/background"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/library_items"
                android:text=""
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/background"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="@string/LibraryItems"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/profile_circles_bg"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/background"
                android:textSize="20sp"
                android:id="@+id/groups_count"
                android:textStyle="bold"
                android:text=""
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/background"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="@string/Groups"
                />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e6e7e8"
            android:orientation="vertical"
            android:layout_below="@+id/linearLayout13"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:weightSum="1">




        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
