<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e7e8"
    android:clickable="true"
    tools:context="activities.Home">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/background"
                android:layout_gravity="left|top"
                android:id="@+id/relativeLayout7"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/close"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/back" />

                <TextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Language"
                    android:id="@+id/textView20"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/settings_box_bg"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_below="@+id/relativeLayout7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/relativeLayout10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/settings_header_bg"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout11" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="@string/Language"
                        android:textColor="@color/background"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:weightSum="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout9"
                    android:layout_below="@+id/textView49"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="33dp">

                    <Button
                        android:layout_width="0dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/Cancel"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/cancel_btn"
                        android:id="@+id/cancel"
                        android:layout_below="@+id/editText11"
                        android:layout_alignLeft="@+id/editText11"
                        android:layout_alignStart="@+id/editText11" />

                    <Button
                        android:layout_width="0dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/save_btn"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/Save"
                        android:id="@+id/save"
                        android:layout_alignTop="@+id/button8"
                        android:layout_alignRight="@+id/editText11"
                        android:layout_alignEnd="@+id/editText11" />
                </LinearLayout>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/linearLayout11"
                    android:layout_alignLeft="@+id/linearLayout9"
                    android:layout_alignStart="@+id/linearLayout9">

                    <RadioButton
                        android:id="@+id/ar"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/radio"
                        android:button="@android:color/transparent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:checked="false" />

                    <RadioButton
                        android:id="@+id/en"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/radio"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/linearLayout7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/Arabic"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView48"
                    android:layout_alignTop="@+id/radioGroup"
                    android:layout_toRightOf="@+id/radioGroup"
                    android:layout_toEndOf="@+id/radioGroup" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/English"
                    android:textColor="#000"
                    android:id="@+id/textView49"
                    android:layout_alignBottom="@+id/radioGroup"
                    android:layout_alignLeft="@+id/textView48"
                    android:layout_alignStart="@+id/textView48" />
            </RelativeLayout>
</RelativeLayout>
