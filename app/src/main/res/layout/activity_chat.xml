<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/chat_bg"
    android:layout_height="match_parent"
    tools:context="com.edubook.activities.Chat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout4">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="back"
            android:src="@drawable/back"
            android:id="@+id/imageView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lilly Colins"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chat_bg"
        android:id="@+id/scroll_chat"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/chat_input">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/chat_messages"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <include
                layout="@layout/ellipse_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <include
                layout="@layout/ellipse_right"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <include
                layout="@layout/ellipse_left"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <include
                layout="@layout/ellipse_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
        </ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/chat_input"
    android:layout_alignParentLeft="true"
    android:background="@drawable/upper_border_only_grey"
    android:layout_alignParentStart="true"
    android:paddingTop="1dp"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_toLeftOf="@+id/button2"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:minLines="2"
            android:maxLength ="20000"
            android:id="@+id/editText3" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:onClick="chat"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Send"
            android:textColor="@color/background"
            android:id="@+id/button2"/>
</LinearLayout>
</RelativeLayout>
