<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <layer-list>

            <item>
                <color
                    android:color="@android:color/white"/>
            </item>

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <stroke android:width="1dp" android:color="#c0c2c4" />
                    <padding
                        android:left="0dip"
                        android:top="0dip"
                        android:right="10dip"
                        android:bottom="0dip" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center_vertical|right"
                    android:src="@drawable/spinner_picker"/>

            </item>
        </layer-list>

    </item>
</selector>